<html>
  <body>

  <% form_for "user", @user, :url => "/signup/sign_up_save"  do |f| -%>
    <p><%= f.label :email %></p>
    <p><%= f.text_field :email %></p>

    <p><%= f.label :password %></p>
    <p><%= f.password_field :password %></p>

    <p><%= f.label :password_repeat %></p>
    <p><%= f.password_field :password_repeat %></p>

    <p><%= f.submit "Sign up" %></p>
  <% end -%>

  </body>
</html>